# General aliases
alias py=python3
alias qemu=qemu-system-x86_64

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias 1='cd -1'
alias 2='cd -2'
alias 3='cd -3'

alias ls='ls --color=tty'
alias la='ls -lAh'
alias ll='ls -lh'
alias grep='grep --color=auto'

# Git aliases
alias gs='git status'
alias gl='git log'
alias gb='git branch'
alias gba='git branch --all'
alias gbr='git branch -r' 
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git add --all && git commit -am'
alias gp='git push'
alias gu='git pull'
alias gpop='git reset --soft HEAD~1'
alias gco='git checkout'
alias gcob='git checkout -b'

gcamp() {
    gcam "$1" && git push
}

# Configuration files
alias nvimc='$EDITOR ~/.config/nvim/'
alias bashrc='$EDITOR ~/.bashrc'
alias sbash='source ~/.bashrc'
alias zshrc='$EDITOR ~/.zshrc'
alias szsh='source ~/.zshrc'
alias aliases='$EDITOR ~/.aliasrc'
alias odot='$EDITOR ~/.dotfiles'
alias dot='cd ~/.dotfiles'

