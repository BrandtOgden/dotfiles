syntax enable
filetype plugin indent on
colorscheme desert

" ==================== Options ====================
set number
set scrolloff=10

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set copyindent
set noshiftround

set incsearch
set hlsearch
set ignorecase
set smartcase
set showmatch

set wildmenu
set hidden

set clipboard=unnamedplus
set history=500
set undodir=~/.vim/undo
set undofile

let g:netrw_liststyle = 3

" ==================== Remaps ====================
inoremap jk <Esc>
